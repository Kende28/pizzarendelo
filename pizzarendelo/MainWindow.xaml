<Window x:Class="pizzarendelo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pizzarendelo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Label Content="Tészta" FontFamily="Cooper Black" FontSize="36" Grid.Row="0" Grid.Column="0"/>
		<ListBox x:Name="lb_teszta" Grid.Row="0" Grid.Column="0" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,50,0,0" FontFamily="Times New Roman" FontSize="20"/>

		<Label Content="Méret" FontFamily="Cooper Black" FontSize="36" Grid.Row="0" Grid.Column="1"/>
		<ComboBox x:Name="cb_meret" Grid.Row="0" Grid.Column="1" FontFamily="Times New Roman" Margin="0,50,0,120" FontSize="20"/>

		<Label Content="Feltétek" FontFamily="Cooper Black" FontSize="36" Grid.Row="0" Grid.Column="2"/>
		<StackPanel x:Name="sp_feltet" Grid.Row="0" Grid.Column="2" Margin="0,50,0,0">
			<CheckBox x:Name="cb_sajt" Content="sajt"/>
			<CheckBox x:Name="cb_sonka" Content="sonka"/>
			<CheckBox x:Name="cb_gomba" Content="gomba"/>
			<CheckBox x:Name="cb_oliva" Content="olivabogyó"/>
			<CheckBox x:Name="cb_kukorica" Content="kukorica"/>
		</StackPanel>

		<Label Content="Átvétel" FontFamily="Cooper Black" FontSize="36" Grid.Row="1" Grid.Column="0"/>
		<StackPanel x:Name="">
			
		</StackPanel>
	</Grid>
</Window>
